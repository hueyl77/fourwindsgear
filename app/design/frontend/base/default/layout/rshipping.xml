<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addCss">
                <stylesheet>itwebexperts_rshipping/css/style.css</stylesheet>
            </action>
        </reference>
    </default>

    <PRODUCT_TYPE_reservation>
        <reference name="product.info.payperrentals">
            <block type="payperrentals/catalog_product_view" name="product.info.payperrentals.shipping" as="product-shipping" template="rshipping/catalog/product/rental_shipping.phtml"/>
        </reference>
    </PRODUCT_TYPE_reservation>
    <PRODUCT_TYPE_configurable>
        <reference name="product.info.payperrentals">
            <block type="payperrentals/catalog_product_view" name="product.info.payperrentals.shipping" as="product-shipping" template="rshipping/catalog/product/rental_shipping.phtml"/>
        </reference>
    </PRODUCT_TYPE_configurable>
    <PRODUCT_TYPE_grouped>
        <reference name="product.info.payperrentals">
            <block type="payperrentals/catalog_product_view" name="product.info.payperrentals.shipping" as="product-shipping" template="rshipping/catalog/product/rental_shipping.phtml"/>
        </reference>
    </PRODUCT_TYPE_grouped>
    <PRODUCT_TYPE_bundle>
        <reference name="product.info.payperrentals">
            <block type="payperrentals/catalog_product_view" name="product.info.payperrentals.shipping" as="product-shipping" template="rshipping/catalog/product/rental_shipping.phtml"/>
        </reference>
    </PRODUCT_TYPE_bundle>

    <checkout_onepage_index>
        <reference name="checkout.onepage.shipping_method.available">
            <action method="setTemplate">
                <template>rshipping/checkout/onepage/shipping_method/available.phtml</template>
            </action>
        </reference>
    </checkout_onepage_index>
    <checkout_cart_index>
        <reference name="checkout.cart.shipping">
            <action method="setTemplate">
                <template>rshipping/checkout/cart/shipping.phtml</template>
            </action>
        </reference>
    </checkout_cart_index>
    <checkout_onepage_shippingmethod>
        <reference name="root">
            <action method="setTemplate">
                <template>rshipping/checkout/onepage/shipping_method/available.phtml</template>
            </action>
        </reference>
    </checkout_onepage_shippingmethod>
</layout>