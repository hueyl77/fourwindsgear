<?xml version="1.0"?>
<config>
    <tabs>
        <joomlart translate="label" module="joomlart_jmproductsdeal">
            <label>JoomlArt</label>
            <sort_order>210</sort_order>
        </joomlart>
    </tabs>  
	<sections>
        <joomlart_jmproductsdeal>
            <label>JM Daily Deal</label>
            <tab>joomlart</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<joomlart_jmproductsdeal translate="label">
                    <label>JM Daily Deal: Config General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>     
                    	<show translate="label" module="core">
							<label>Enabled</label>
							<sort_order>10</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</show>	
						<title translate="label">
                            <label>Title: </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>  
						<!--						
						<mode translate="label">
                            <label>Mode: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>joomlart_jmproductsdeal/system_config_source_listType</source_model>
                            <backend_model>joomlart_jmproductsdeal/system_config_backend_jmProductsDeal_checkMode</backend_model>
							<comment>add "Special Price" with "Special Price From Date" and "Special Price To Date"</comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mode>
						-->
                        <catsid translate="label">
                            <label>Categories ID: </label>
                            <frontend_type>text</frontend_type>
                            <backend_model>joomlart_jmproductsdeal/system_config_backend_jmProductsDeal_checkInputCategory</backend_model>
                            <comment>Eg: 22,23. Empty for all categories.</comment>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </catsid>         
						<mode translate="label">
                            <label>Mode: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>joomlart_jmproductsdeal/system_config_source_listType</source_model>
                            <backend_model>joomlart_jmproductsdeal/system_config_backend_jmProductsDeal_checkMode</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mode>
						<quanlity translate="label">
							<label># Qty of products</label>
							<sort_order>100</sort_order>
							<frontend_type>text</frontend_type>
							<backend_model>joomlart_jmproductsdeal/system_config_backend_jmProductsDeal_checkQty</backend_model>
							<comment>0 for show all</comment>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</quanlity>																                       
						<perrow translate="label">
							<label># Number of items/rows (or columns)</label>
							<sort_order>110</sort_order>
							<frontend_type>text</frontend_type>
							<backend_model>joomlart_jmproductsdeal/system_config_backend_jmProductsDeal_checkPerrow</backend_model>
							<comment>work with Grid Mode</comment>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</perrow>		
						<width translate="label">
							<label>Width of thumbnail</label>
							<sort_order>100</sort_order>
							<frontend_type>text</frontend_type>
							<backend_model>joomlart_jmproductsdeal/system_config_backend_jmProductsDeal_checkWidth</backend_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
