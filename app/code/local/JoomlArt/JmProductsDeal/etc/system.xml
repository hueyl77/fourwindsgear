							<sort_order>100</sort_order>
							<frontend_type>text</frontend_type>
							<backend_model>joomlart_jmproductsdeal/system_config_backend_jmProductsDeal_checkMax</backend_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</max>		
						<showproductleft translate="label">
							<label>Show In Stock Amount</label>
							<sort_order>111</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</showproductleft>
						<showdiscount translate="label">
							<label>Show Discount Amount</label>
							<sort_order>111</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</showdiscount>
						<showitemsold translate="label">
							<label>Show Items Sold Amount</label>
							<sort_order>112</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</showitemsold>
						<showsaleenddate translate="label">
							<label>Show Countdown Timer</label>
							<sort_order>113</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</showsaleenddate>
						<showsaveamount translate="label">
							<label>Show Saving Amount</label>
							<sort_order>114</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</showsaveamount>
